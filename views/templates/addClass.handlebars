<div id="course-form-{{id}}" class="course-form">
    <div class="form-group row">
        <label for="courseNumber-{{id}}" class="col-sm-4 col-form-label">Course Number</label>
        <div class="col-sm-8">
            <input type="text" id="courseNumber-{{id}}" class="form-control" placeholder="Ex. CS 545">
        </div>
    </div>

    <div class="form-group row">
        <label for="courseName-{{id}}" class="col-sm-4 col-form-label">Course Name</label>
        <div class="col-sm-8">
            <input type="text" id="courseName-{{id}}" class="form-control" placeholder="Ex. Human Computer Interaction">
        </div>
    </div>

    <!-- Days -->
    <div class="form-group row form-days">
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" id="courseMonday-{{id}}" value="Monday">
            <label class="form-check-label" for="courseMonday-{{id}}">Monday</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" id="courseTuesday-{{id}}" value="Tuesday">
            <label class="form-check-label" for="courseTuesday-{{id}}">Tuesday</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" id="courseWednesday-{{id}}" value="Wednesday">
            <label class="form-check-label" for="courseWednesday-{{id}}">Wednesday</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" id="courseThursday-{{id}}" value="Thursday">
            <label class="form-check-label" for="courseThursday-{{id}}">Thursday</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" id="courseFriday-{{id}}" value="Friday">
            <label class="form-check-label" for="courseFriday-{{id}}">Friday</label>
        </div>
    </div>

    <div class="form-group row">
        <label for="courseStartTime-{{id}}" class="col-sm-4 col-form-label">Course Start Time </label>
        <div class="col-sm-8">
            <input type="time" id="courseStartTime-{{id}}" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <label for="courseEndTime-{{id}}" class="col-sm-4 col-form-label">Course End Time</label>
        <div class="col-sm-8">
            <input type="time" id="courseEndTime-{{id}}" class="form-control">
        </div>
    </div>
</div>